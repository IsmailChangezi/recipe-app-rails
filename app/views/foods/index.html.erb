<p style="color: green"><%= notice %></p>

<div id="foods" class="container">
<h1>Foods</h1>
  <table class="table table-striped" >
 <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name:</th>
      <th scope="col">Measurement_unit:</th>
      <th scope="col">Price: </th>
      <th scope="col">Quantity:</th>
    </tr>
  </thead>
  <tbody>
   <% @foods.each do |food| %>
    <tr>
      <th scope="row"><%= food.id %></th>
      <td><%=food.name%></td>
      <td><%=food.measurement_unit%></td>
      <td><%=food.price%></td>
      <td><%=food.quantity%></td>
    </tr>
      <% end %>
  </tbody>
  </table>
  <%= link_to "Create a New Food", new_food_path%>
</div>

