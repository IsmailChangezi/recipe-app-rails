<p style="color: green"><%= notice %></p>

<div id="foods" class="container">
  <h4 class="float-end" >
    <%= link_to "Create a New Food", new_food_path%>
  </h4>
  <table class="table table-striped table-bordered" >
 <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name:</th>
      <th scope="col">Measurement_unit:</th>
      <th scope="col">Price: </th>
      <th scope="col">Quantity:</th>
    </tr>
  </thead>
  <tbody>
   <% @foods.each do |food| %>
    <tr>
      <th scope="row"><%= food.id %></th>
      <td><%=food.name%></td>
      <td><%=food.measurement_unit%></td>
      <td><%=food.price%></td>
      <td><%=food.quantity%></td>
    <td>  <%= button_to "Delete",food, method: :delete %></td>
    </tr>
      <% end %>
  </tbody>
  </table>
  
</div>

