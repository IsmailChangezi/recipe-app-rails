<section class="flex-center column public-recipes">
  <ul class="max-width flex-center column">
    <% @public_recipes.each do |recipe| %>
      <li class="row">
        <a href=<%= "recipes/#{recipe.id}" %> class="card row-wrap public-recipe">  
          <div>
            <h3><%= recipe.name %></h3>
            <p>by: <span class="btn-text color-red"><%= recipe.users.name %></span></p>
          </div>
          <div>
            <h4>Total food: <span class="color-red"><%= recipe.recipe_foods.length %></span></h4>
            <h4>Total price: <span class="color-red">$<%= RecipeFood.total_price(recipe.recipe_foods) %></span></h4>
          </div>
        </a>
      </li>
    <% end %>
  </ul>
</section>